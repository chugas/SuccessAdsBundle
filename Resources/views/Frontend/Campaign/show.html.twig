{% extends 'SuccessAdsBundle:Frontend:layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link href="/js/portal/bootstrap/datepicker/css/datepicker.css" rel="stylesheet" type="text/css" />
  <link href="/css/portal/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block filters %}
<div class="box-body">
  {#<form action="{{ path('campaignLog_stats', { 'campaign_id' : campaign.id }) }}" method="POST" onsubmit="return executeFilter(this);">#}
  <form action="{{ path('ads_show', { 'id' : campaign.id }) }}" method="GET">    
    {#<div class="input-group input-group-sm col-md-2" style="padding-left: 0px;">
      {{ form_widget(filter.sections) }}
    </div>#}

    <div class="input-group input-group-sm col-md-2" style="padding-left: 0px;">
      <div class="input-group-addon">
        <i class="fa fa-calendar"></i>
      </div>
      {{ form_widget(filter.created_date.left_date, { 'attr': { 'placeholder': 'Desde' } }) }}
    </div>
      
    <div class="input-group input-group-sm col-md-2">
      <div class="input-group-addon">
        <i class="fa fa-calendar"></i>
      </div>
      {{ form_widget(filter.created_date.right_date, { 'attr': { 'placeholder': 'Hasta' } }) }}
    </div>

    <div class="input-group input-group-sm col-md-2">
      <span class="input-group-btn">
        <button type="submit" class="btn btn-info btn-flat">BUSCAR!</button>
      </span>
    </div>
    <div class="clearfix"></div>
  </form>
</div>
{% endblock %}

{% block header %}{{ campaign.name }}{% endblock %}
  
{% block body %}
{% spaceless %}

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <div class="box-tools"></div>
      </div>
        
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <thead>
            <tr>
              <td>Estado</td>
              <td>Nombre de la campa√±a</td>
              <td>Secciones</td>
              <td>Presupuesto diario</td>
              <td>Impresiones</td>
              <td>Gasto</td>
              <td>Fecha de inicio</td>
              <td>Fecha de fin</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{{ campaign.getState() | trans({}, 'SuccessAdsBundle') }}</td>
              <td><a href="{{ path('ads_show', { 'id': campaign.id }) }}">{{ campaign.name }}</a></td>
              <td>
                {% for section in campaign.getSections() %}
                  {{ ( not loop.first ? ' - '~section : section ) }}
                {% endfor %}
              </td>
              <td>$U {{ campaign.pricePerDay }}</td>
              <td>{{ campaign.views }}</td>
              <td>$U {{ campaign.views * pricePerView }}</td>
              <td>{{ campaign.unlockedDate | date('d-m-Y H:i') }}</td>
              <td>{{ campaign.unlockedUntilDate | date('d-m-Y H:i') }}</td>
            </tr>
           </tbody>
        </table>
      </div>        

      <div class="box-body table-responsive no-padding">
        {# GRAFICA #}
        <div id="container" style="min-width: 400px; height: 400px; margin: 20px auto"></div>

        <table id="campaign_logs" class="table table-hover">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Impresiones</th>
              <th>Gasto</th>
            </tr>
          </thead>
          <tbody>
            {% for campaignLog in service.getPager().getCurrentPageResults() %}
            <tr>
              <td>{{ campaignLog.created_date | date('d/m/Y') }}</td>
              <td>{{ campaignLog.views }}</a></td>
              <td>$U {{ campaignLog.views * 4.98 }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
        
      <div class="box-footer clearfix"></div>
    </div>
    <div class="box-footer">
      <a href="{{ path('ads_index') }}" class="btn btn-primary" >Volver</a>
    </div>
  </div>
</div>

{% endspaceless %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="/js/portal/charts/highcharts.js" type="text/javascript"></script>
  <script src="/js/portal/datatables/jquery.dataTables-min.js" type="text/javascript"></script>
  <script src="/js/portal/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
  <script src="/js/portal/bootstrap/datepicker/js/bootstrap-datepicker.js" type="text/javascript"></script>
  <script src="/js/portal/bootstrap/datepicker/js/locales/bootstrap-datepicker.es.js" type="text/javascript"></script>  
  <script type="text/javascript">
    $(function() {

      $('.nav-datepicker').datepicker({
          language: "{{ app.request.locale }}",
          autoclose: true,
          format: 'dd/mm/yyyy'
      });

    });
  </script>
  <script type="text/javascript">
    var chart;
    var options;

    $(function () {

      $(document).ready(function() {
        // define the options
        options = {
          chart: {
            renderTo: 'container'
          },    
          title: {
            text: 'Estadisticas de impresiones'
          },    
          subtitle: {
            text: 'Por dia'
          },    
          xAxis: {
            type: 'datetime',
            //tickInterval: 7 * 24 * 3600 * 1000, // one week
            tickWidth: 0,
            gridLineWidth: 1,
            labels: {
              align: 'left',
              x: 3,
              y: -3
            }
          },    
          yAxis: [{ // left y axis
              title: {
                text: null
              },
              labels: {
                align: 'left',
                x: 3,
                y: 16,
                formatter: function() {
                  return Highcharts.numberFormat(this.value, 0);
                }
              },
              showFirstLabel: false
            }, { // right y axis
              linkedTo: 0,
              gridLineWidth: 0,
              opposite: true,
              title: {
                text: null
              },
              labels: {
                align: 'right',
                x: -3,
                y: 16,
                formatter: function() {
                  return Highcharts.numberFormat(this.value, 0);
                }
              },
              showFirstLabel: false
            }],

          legend: {
            align: 'left',
            verticalAlign: 'top',
            y: 20,
            floating: true,
            borderWidth: 0
          },
          credits: {
            enabled: false
          },
          tooltip: {
            shared: true,
            crosshairs: true
          },    
          series: [
            {
              name: 'Visitas',
              lineWidth: 4,
              marker: {
                radius: 4
              }
            }
          ]
        };
        //mdShowLoading();

        jQuery.get(decodeURI('{{ path('campaignLog_stats', { 'filter': service.getFilterParameters()| merge({ '_page': 1 }), 'campaign_id' : campaign.id }) }}').replace(/&amp;/g, '&'), null, function(tsv, state, xhr) {
          plot(tsv);
          //mdHideLoading();
        },'json');
      });
    });

    function plot(tsv){
      var stats = [];

      statsResponse = tsv.stats;

      $.each($(statsResponse), function(i,value){
        stats.push([
          parseInt(value.date),
          parseInt(value.count, 10)
        ]);
      });

      options.series[0].data = stats;
      chart = new Highcharts.Chart(options);
    }

    function executeFilter(obj){
      //  mdShowLoading();
      $.ajax({
        type: "POST",
        url: $(obj).attr("action"),
        dataType: "json",
        data: $(obj).serialize(),
        success: function(data){
          plot(data);
          //mdHideLoading();
          // update tabla con update del dataTable
        },
        error: function(data){}
      }); 
      return false;
    }
  </script>
  
  {% if service.getPager().getCurrentPageResults() | length > 25 %}
  <script type="text/javascript">
    $(function() {
        $('#campaign_logs').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": false,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": false,
            "oLanguage": {
              "sInfo": "_START_ a _END_ de _TOTAL_ registros",
              "sLengthMenu": "Ver _MENU_ por pagina",
              "oPaginate": {
                "sPrevious": "",
                "sNext": ""
              }
            },
            "iDisplayLength": 25
        });
    });
  </script>
  {% endif %}
{% endblock %}