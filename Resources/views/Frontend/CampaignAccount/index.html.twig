{% extends 'SuccessAdsBundle:Frontend:layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link href="/js/portal/bootstrap/datepicker/css/datepicker.css" rel="stylesheet" type="text/css" />
  <link href="/css/portal/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block filters %}
<div class="box-body">
  <form action="{{ path('campaignTransaction_index') }}" method="GET">
    {#<div class="input-group input-group-sm col-md-2" style="padding-left: 0px;">
      {{ form_widget(filter.sections) }}
    </div>#}

    <div class="input-group input-group-sm col-md-2" style="padding-left: 0px;">
      <div class="input-group-addon">
        <i class="fa fa-calendar"></i>
      </div>
      {{ form_widget(filter.created_date.left_date, { 'attr': { 'placeholder': 'Desde' } }) }}
    </div>
      
    <div class="input-group input-group-sm col-md-2">
      <div class="input-group-addon">
        <i class="fa fa-calendar"></i>
      </div>
      {{ form_widget(filter.created_date.right_date, { 'attr': { 'placeholder': 'Hasta' } }) }}
    </div>

    <div class="input-group input-group-sm col-md-2">
      <span class="input-group-btn">
        <button type="submit" class="btn btn-info btn-flat">BUSCAR!</button>
      </span>
    </div>
    <div class="clearfix"></div>
  </form>
</div>
{% endblock %}

{% block header %}Mi Cuenta{% endblock %}
  
{% block body %}
{% spaceless %}

<div class="row">
  <div class="col-md-6">
    <div class="box box-info">
      <div class="box-header">
        <h3 class="box-title">Datos de la cuenta</h3>
      </div><!-- /.box-header -->
      <div class="box-body">
        <dl class="dl-horizontal" style="margin-top: 0px;">
          <dt>Numero de cuenta</dt>
          <dd>{{ account.code }}</dd>
          <dt>Moneda</dt>
          <dd>{{ account.currency }}</dd>
          <dt>Saldo</dt>
          <dd>{{ account.total }}</dd>
          <dt>Fecha de creacion</dt>
          <dd>{{ account.createdDate | date('d-m-Y H:i:s') }}</dd>
        </dl>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-body table-responsive no-padding">
        <div class="box-header">
          <h3 class="box-title">Movimientos</h3>
          <div class="box-tools"></div>
        </div>
        <table id="campaign_transaction_account" class="table table-hover">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Concepto</th>
              <th>Debito</th>
              <th>Credito</th>
              <th>Saldo</th>
            </tr>
          </thead>
          <tbody>
            {% for campaignTransaction in service.getPager().getCurrentPageResults() %}
            <tr>
              <td>{{ campaignTransaction.created_date | date('d-m-Y H:i:s') }}</td>
              <td>{{ campaignTransaction.concept }}</a></td>
              <td>{{ (campaignTransaction.debit is not null ? '$U '~campaignTransaction.debit : '-') }}</td>
              <td>{{ (campaignTransaction.credit is not null ? '$U '~campaignTransaction.credit : '-') }}</td>
              <td>$U {{ campaignTransaction.total }}</td>      
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
        
      <div class="box-footer clearfix"></div>
    </div>
    {#<div class="box-footer">
      <a href="{{ path('ads_index') }}" class="btn btn-primary" >Volver</a>
    </div>#}
  </div>
</div>

{% endspaceless %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="/js/portal/datatables/jquery.dataTables-min.js" type="text/javascript"></script>
  <script src="/js/portal/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
  <script src="/js/portal/bootstrap/datepicker/js/bootstrap-datepicker.js" type="text/javascript"></script>
  <script src="/js/portal/bootstrap/datepicker/js/locales/bootstrap-datepicker.es.js" type="text/javascript"></script>  
  <script type="text/javascript">
    $(function() {
      $('.nav-datepicker').datepicker({
          language: "{{ app.request.locale }}",
          autoclose: true,
          format: 'dd/mm/yyyy'
      });
    });
  </script>
  
  {% if service.getPager().getCurrentPageResults() | length > 25 %}
  <script type="text/javascript">
    $(function() {
        $('#campaign_transaction_account').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": false,
            "bSort": false,
            "bInfo": true,
            "bAutoWidth": true,
            "oLanguage": {
              "sInfo": "_START_ a _END_ de _TOTAL_ registros",
              "sLengthMenu": "Ver _MENU_ por pagina",
              "oPaginate": {
                "sPrevious": "",
                "sNext": ""
              }
            },
            "iDisplayLength": 25
        });
    });
  </script>
  {% endif %}
{% endblock %}
